@using WebApp.Entities
@model Tag

@{
    ViewData["Title"] = "Створення тегу";
}

<!-- Container -->
<div class="container-fixed">
    <div class="flex flex-wrap items-center lg:items-end justify-between gap-5 pb-7.5">
        <div class="flex flex-col justify-center gap-2">
            <h1 class="text-xl font-medium leading-none text-gray-900">
                Створення тегу
            </h1>
            <div class="flex items-center gap-2 text-sm font-normal text-gray-700">
                Додавання нового тегу до блогу
            </div>
        </div>
    </div>
</div>

<!-- Container -->
<div class="container-fixed">
    <form class="card create-tag-form" asp-controller="Admin" asp-action="CreateTag" method="post">
        <div class="card-header">
            <h3 class="card-title">
                Новий тег
            </h3>
        </div>

        <div class="card-body grid gap-5">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <!-- Name -->
            <div class="flex items-baseline flex-wrap lg:flex-nowrap gap-2.5">
                <label class="form-label max-w-32">Назва тегу *</label>
                <input class="input" name="Name" type="text" value="@Model?.Name"
                       placeholder="Введіть назву тегу" required />
            </div>

            <!-- Slug -->
            <div class="flex items-baseline flex-wrap lg:flex-nowrap gap-2.5">
                <label class="form-label max-w-32">Slug</label>
                <div class="flex flex-col gap-2 w-full">
                    <input class="input" name="Slug" type="text" value="@Model?.Slug"
                           placeholder="Введіть slug (заповниться автоматично)" />
                    <small class="text-gray-500 text-sm">URL-дружній ідентифікатор</small>
                </div>
            </div>

            <!-- Preview -->
            <div class="flex items-baseline flex-wrap lg:flex-nowrap gap-2.5">
                <label class="form-label max-w-32">Попередній перегляд</label>
                <div class="flex items-center gap-2">
                    <span class="badge badge-primary badge-outline rounded-[30px]">
                        <span class="size-1.5 rounded-full bg-primary me-1.5"></span>
                        <span id="tagPreview">Назва тегу</span>
                    </span>
                </div>
            </div>
        </div>

        <div class="card-footer justify-center gap-2.5">
            <button class="btn btn-sm btn-success" type="submit">
                <i class="ki-filled ki-plus"></i>
                Створити тег
            </button>
            <a class="btn btn-sm btn-light" href="/Admin/Tags">
                <i class="ki-filled ki-cross"></i>
                Скасувати
            </a>
        </div>
    </form>
</div>


<script src="~/assets/js/jquery-3.7.1.min.js"></script>
<script src="~/assets/js/editTag.js"></script>