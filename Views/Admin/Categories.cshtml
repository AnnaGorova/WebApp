@using WebApp.Entities
@model List<Category>

@{
    ViewData["Title"] = "Управління категоріями";
}

<!-- Container -->
<div class="container-fixed">
    <div class="flex flex-wrap items-center lg:items-end justify-between gap-5 pb-7.5">
        <div class="flex flex-col justify-center gap-2">
            <h1 class="text-xl font-medium leading-none text-gray-900">
                Управління категоріями
            </h1>
            <div class="flex items-center gap-2 text-sm font-normal text-gray-700">
                Керування категоріями блогу
            </div>
        </div>
        
    </div>
</div>

<!-- Container -->
<div class="container-fixed">
    <div class="grid gap-5 lg:gap-7.5">
        <div class="card card-grid min-w-full">
            <div class="card-header flex-wrap gap-2">
                <h3 class="card-title font-medium text-sm">
                   
                    @if (Model != null)
                    {
                        <text>Showing @Model.Count of @Model.Count categories</text>
                    }
                    else
                    {
                        <text>No categories found</text>
                    }

                   
                </h3>
                @if (Model != null && Model.Any())
                {
                    
                
                <div class="flex flex-wrap gap-2 lg:gap-5">
                    <div class="flex">
                        <label class="input input-sm">
                            <i class="ki-filled ki-magnifier"></i>
                            <input data-datatable-search="#categories_table" placeholder="Search categories" type="text" value="">
                        </label>
                    </div>
                    <div class="flex flex-wrap gap-2.5">
                        <select class="select select-sm w-28" id="categoryFilter">
                            <option value="">All</option>
                            <option value="hasParent">With Parent</option>
                            <option value="noParent">No Parent</option>
                        </select>
                        <button class="btn btn-sm btn-outline btn-primary" onclick="applyCategoryFilters()">
                            <i class="ki-filled ki-setting-4"></i>
                            Filters
                        </button>

                      
                        <a class="btn btn-sm btn-success" href="/Admin/CreateCategory">
                            <i class="ki-filled ki-plus-squared"></i>
                            Нова категорія
                        </a>

                    </div>
                </div>
                
                
                }

            </div>



            <div class="card-body">
                @if (Model == null)
                {
                    <div class="text-center py-10">
                        <i class="ki-filled ki-category text-4xl text-gray-400 mb-4"></i>
                        <h3 class="text-lg font-medium text-gray-900 mb-2">No categories found</h3>
                        <p class="text-gray-600">There are no categories in the database yet.</p>
                    </div>
                }
                else
                {
                    
               
                <div data-datatable="true" data-datatable-state-save="false" id="categories_table">
                    <div class="scrollable-x-auto">
                        <table class="table table-auto table-border" data-datatable-table="true">
                            <thead>
                                <tr>
                                    <th class="w-[60px] text-center">ID</th>
                                    <th class="min-w-[180px]">
                                        <span class="sort asc">
                                            <span class="sort-label font-normal text-gray-700">Name</span>
                                            <span class="sort-icon"></span>
                                        </span>
                                    </th>
                                    <th class="min-w-[150px]">
                                        <span class="sort">
                                            <span class="sort-label font-normal text-gray-700">Slug</span>
                                            <span class="sort-icon"></span>
                                        </span>
                                    </th>
                                    <th class="min-w-[200px]">
                                        <span class="sort">
                                            <span class="sort-label font-normal text-gray-700">Description</span>
                                            <span class="sort-icon"></span>
                                        </span>
                                    </th>
                                    <th class="min-w-[150px]">
                                        <span class="sort">
                                            <span class="sort-label font-normal text-gray-700">Parent Category</span>
                                            <span class="sort-icon"></span>
                                        </span>
                                    </th>
                                    <th class="min-w-[120px]">
                                        <span class="sort">
                                            <span class="sort-label font-normal text-gray-700">Image</span>
                                            <span class="sort-icon"></span>
                                        </span>
                                    </th>
                                    <th class="min-w-[120px] text-center">
                                        <span class="sort-label font-normal text-gray-700">Actions</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Category category in Model)
                                {
                                    <tr>
                                        <td class="text-center">@category.Id</td>
                                        <td>
                                            <div class="flex items-center gap-2">
                                                @if (!string.IsNullOrEmpty(category.ImageSrc))
                                                {
                                                    <img src="@category.ImageSrc" alt="@category.Name" class="w-8 h-8 rounded object-cover">
                                                }
                                                <span>@category.Name</span>
                                            </div>
                                        </td>
                                        <td class="text-gray-800 font-normal">@category.Slug</td>
                                        <td class="text-gray-800 font-normal">
                                            @if (!string.IsNullOrEmpty(category.Description) && category.Description.Length > 50)
                                            {
                                                @category.Description.Substring(0, 50)

                                                <text>...</text>
                                            }
                                            else
                                            {
                                                @category.Description
                                            }
                                        </td>
                                            <td class="text-gray-800 font-normal">
                                                @if (category.ParentCategory != null)
                                                {
                                                    <span class="badge badge-primary badge-outline rounded-[30px]">
                                                        <span class="size-1.5 rounded-full bg-primary me-1.5"></span>
                                                        @category.ParentCategory.Name (ID: @category.ParentID)
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary badge-outline rounded-[30px]">
                                                        <span class="size-1.5 rounded-full bg-gray-500 me-1.5"></span>
                                                        Main
                                                    </span>
                                                }
                                            </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(category.ImageSrc))
                                            {
                                                <span class="badge badge-success badge-outline rounded-[30px]">
                                                    @category.ImageSrc
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-gray badge-outline rounded-[30px]">
                                                    <i class="ki-filled ki-cross me-1.5"></i>
                                                    No
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="menu flex-inline" data-menu="true">
                                                <div class="menu-item" data-menu-item-offset="0, 10px" data-menu-item-placement="bottom-end" data-menu-item-placement-rtl="bottom-start" data-menu-item-toggle="dropdown" data-menu-item-trigger="click|lg:click">
                                                    <button class="menu-toggle btn btn-sm btn-icon btn-light btn-clear">
                                                        <i class="ki-filled ki-dots-vertical"></i>
                                                    </button>
                                                    <div class="menu-dropdown menu-default w-full max-w-[175px]" data-menu-dismiss="true">
                                                        <div class="menu-item">
                                                            <a class="menu-link" href="/Admin/EditCategory?categoryId=@category.Id">
                                                                <span class="menu-icon">
                                                                    <i class="ki-filled ki-pencil"></i>
                                                                </span>
                                                                <span class="menu-title">Edit</span>
                                                            </a>
                                                        </div>
                                                        <div class="menu-item">
                                                            <a class="menu-link" href="#">
                                                                <span class="menu-icon">
                                                                    <i class="ki-filled ki-trash"></i>
                                                                </span>
                                                                    <button class="menu-title remove_category_button" data-remove-id="@category.Id"
                                                                            data-datatable-ignore="true">
                                                                        Remove
                                                                    </button>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                
                    </div>
                
                    <div class="card-footer justify-center md:justify-between flex-col md:flex-row gap-5 text-gray-600 text-2sm font-medium">
                        <div class="flex items-center gap-2 order-2 md:order-1">
                            Show
                            <select class="select select-sm w-16" data-datatable-size="true" name="perpage"></select>
                            per page
                        </div>
                        <div class="flex items-center gap-4 order-1 md:order-2">
                            <span data-datatable-info="true"></span>
                            <div class="pagination" data-datatable-pagination="true"></div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal  Remove Category -->
<div class="modal" data-modal="true" id="remove_category_modal"  style="background-color: dimgray">
    <div class="modal-content max-w-[600px] top-[15%]">
        <div class="modal-header py-4 px-5 justify-end">
            <button class="btn btn-sm btn-icon btn-light btn-clear shrink-0" data-modal-dismiss="true">
                <i class="ki-filled ki-cross"></i>
            </button>
        </div>
        <div class="modal-body p-0 pb-5" style="background-color: black">
            <div class="scrollable-y-auto" data-scrollable="true" data-scrollable-max-height="auto" data-scrollable-offset="300px">
                <div id="remove_category_modal_content">
                    <div class="menu menu-default p-0 flex-col">
                        <div class="menu-item">
                            <div class="menu-link flex items-center justify-between gap-2">
                                <div class="flex items-center grow gap-2 justify-center">
                                    <div class="flex flex-col gap-0.5">
                                        <span class="text-2sm font-semibold text-gray-900">
                                            Ви дійсно хочете видалити категорію?
                                        </span>
                                        <small class="text-red-500 text-xs mt-2">
                                            ⚠️ Увага! Якщо в категорії є дочірні категорії або пости, вони також будуть видалені!
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="flex flex-wrap gap-2.5 px-4 pt-2 justify-center">
                            <button class="btn btn-sm btn-success remove_category_form_button_cancel">
                               Закрити
                            </button>
                            <button class="btn btn-sm btn-danger remove_category_form_button_confirm">
                                Видалити 
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/assets/js/jquery-3.7.1.min.js"></script>
<script src="~/assets/js/removeCategories.js"></script>



