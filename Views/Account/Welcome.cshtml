@{
    ViewData["Title"] = "Ласкаво просимо!";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card text-center">
                <!-- Заголовок -->
                <div class="card-header" style="background-color: #28a745; color: #000000;">
                    <h2>Вітаємо!</h2>
                </div>

                <div class="card-body">
                    <h4 class="card-title">@ViewBag.UserName</h4>

                    <!-- Персональне привітання за типом реєстрації -->
                    @switch (ViewBag.AccountType)
                    {
                        case "Google":
                            <p class="card-text">Ваш акаунт успішно створено через Google!</p>
                            break;
                        case "Телефон":
                            <p class="card-text">Реєстрація через телефон успішна!</p>
                            break;
                        case "Email та Телефон":
                            <p class="card-text">Ваш акаунт підключений до email та телефону!</p>
                            break;
                        default:
                            <p class="card-text">Ласкаво просимо до нашої системи!</p>
                            break;
                    }

                    <!-- Інформація про користувача -->
                    <div class="mt-3 text-start">
                        <p><strong>Email:</strong> @ViewBag.Email</p>

                        <!-- Візуалізація типу акаунта -->
                        @switch (ViewBag.AccountType)
                        {
                            case "Google":
                                <p><i class="bi bi-google text-danger"></i> <strong>Тип акаунта:</strong> Google</p>
                                break;
                            case "Телефон":
                                <p><i class="bi bi-phone text-primary"></i> <strong>Тип акаунта:</strong> Телефон</p>
                                break;
                            case "Email":
                                <p><i class="bi bi-envelope text-success"></i> <strong>Тип акаунта:</strong> Email</p>
                                break;
                            case "Email та Телефон":
                                <p>
                                    <i class="bi bi-envelope text-success"></i>
                                    <i class="bi bi-phone text-primary ms-2"></i>
                                    <strong>Тип акаунта:</strong> Email та Телефон
                                </p>
                                break;
                        }
                    </div>

                    <!-- Додаткова інформація для телефонних акаунтів -->
                    @if (ViewBag.AccountType == "Телефон")
                    {
                        <div class="alert alert-info mt-3">
                            <h6><i class="bi bi-info-circle"></i> Телефонний акаунт</h6>
                            <p class="mb-1">Для входу використовуйте тільки номер телефону.</p>
                            <p class="mb-0">
                                <a href="/Account/SetupPasswordForPhone" class="text-decoration-none">
                                    <i class="bi bi-key"></i> Встановити пароль для додаткового захисту
                                </a>
                            </p>
                        </div>
                    }

                    <!-- Додаткові опції для Google-користувачів -->
                    @if (ViewBag.AccountType == "Google")
                    {
                        <div class="alert alert-warning mt-3">
                            <h6><i class="bi bi-google"></i> Акаунт Google</h6>
                            <p class="mb-1">Ваш акаунт підключений до Google.</p>
                            <p class="mb-0">
                                <a href="/Account/LinkPasswordToGoogle" class="text-decoration-none">
                                    <i class="bi bi-key"></i> Встановити пароль для входу через email
                                </a>
                            </p>
                        </div>
                    }

                    <!-- Кнопки дій -->
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house"></i> Перейти на головну
                        </a>

                        <a href="/Account/Profile" class="btn btn-outline-success ms-2">
                            <i class="bi bi-person-circle"></i> Мій профіль
                        </a>

                        <a href="/Account/Logout" class="btn btn-outline-secondary ms-2">
                            <i class="bi bi-box-arrow-right"></i> Вийти
                        </a>
                    </div>

                    <!-- Додаткові опції для різних типів акаунтів -->
                    <div class="mt-4">
                        <div class="card border-info">
                            <div class="card-body">
                                <h6 class="card-title text-info">
                                    <i class="bi bi-shield-check"></i> Додаткові опції
                                </h6>

                                <!-- Для телефонних акаунтів -->
                                @if (ViewBag.AccountType == "Телефон")
                                {
                                    <p class="card-text small">
                                        <a href="/Account/SetupPasswordForPhone" class="text-decoration-none">
                                            <i class="bi bi-key"></i> Встановити пароль
                                        </a>
                                    </p>
                                }

                                <!-- Для Google-акаунтів -->
                                @if (ViewBag.AccountType == "Google")
                                {
                                    <p class="card-text small">
                                        <!-- Додайте параметр fromProfile -->
                                        <a href="/Account/LinkPasswordToGoogle?fromProfile=true" class="text-decoration-none">
                                            <i class="bi bi-key"></i> Встановити пароль для входу через email
                                        </a>
                                    </p>
                                }

                                <!-- Для всіх, крім телефонних -->
                                @if (ViewBag.AccountType != "Телефон")
                                {
                                    <p class="card-text small">
                                        <a href="/Account/AddPhone" class="text-decoration-none">
                                            <i class="bi bi-phone"></i> Додати номер телефону
                                        </a>
                                    </p>
                                }

                                <!-- Загальні опції -->
                                <p class="card-text small">
                                    <a href="/Account/Profile" class="text-decoration-none">
                                        <i class="bi bi-gear"></i> Налаштування профілю
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>