@{
    ViewData["Title"] = "Підтвердження телефону";
    Layout = "_AccountLayout";
}

<div class="card">
    <div class="card-body flex flex-col gap-5 p-10">
        <div class="text-center mb-2.5">
            <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
                Введіть код підтвердження
            </h3>
            @if (TempData["PhoneNumber"] != null)
            {
                <p class="text-sm text-gray-600">
                    Код відправлено на телефон @TempData["PhoneNumber"]
                </p>


                <div class="bg-yellow-100 border border-yellow-300 p-3 rounded mt-2">
                    <p class="text-sm text-yellow-800">
                        <strong>Для тесту:</strong> Перевірте консоль логів для отримання реального коду
                    </p>
                    <a href="/Account/DebugPhoneCache?phoneNumber=@TempData["PhoneNumber"]"
                       target="_blank"
                       class="text-blue-600 hover:underline text-sm">
                        Перевірити кеш
                    </a>
                </div>



            }
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-600 text-white p-3 rounded-lg mb-4 border border-red-700">
                <p class="m-0 font-medium">@TempData["ErrorMessage"]</p>
            </div>
        }

        <form asp-action="VerifyPhoneLogin" method="post">
            <input type="hidden" name="phoneNumber" value="@TempData["PhoneNumber"]" />

            <div class="flex flex-col gap-1 mb-4">
                <label class="form-label font-normal text-gray-900">
                    6-значний код
                </label>
                <input class="input text-center text-xl tracking-widest"
                       name="code"
                       value=""
                       placeholder="000000"
                       type="text"
                       maxlength="6"
                       required />
                <small class="text-xs text-gray-500 mt-1">
                    Введіть 6-значний код з SMS
                </small>
            </div>

            <button type="submit" class="btn btn-primary flex justify-center w-full mb-2">
                Підтвердити
            </button>

            <div class="text-center">
                <a class="text-sm link" href="/Account/LoginWithPhone">
                    Надіслати код повторно
                </a>
            </div>
        </form>

        <div class="flex items-center gap-2 mt-4">
            <span class="border-t border-gray-200 w-full"></span>
            <span class="text-2xs text-gray-500 font-medium uppercase">Або</span>
            <span class="border-t border-gray-200 w-full"></span>
        </div>

        <div class="text-center">
            <a class="text-sm link" href="/Account/LoginIn">
                Повернутись до входу через Email
            </a>
        </div>
    </div>
</div>