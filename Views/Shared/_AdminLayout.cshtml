<body class="dark antialiased flex h-full text-base text-gray-700 [--tw-page-bg:#fefefe] [--tw-page-bg-dark:var(--tw-coal-500)] demo1 sidebar-fixed header-fixed bg-[--tw-page-bg] dark:bg-[--tw-page-bg-dark]">

    <script>
        document.documentElement.classList.add('dark');
        document.documentElement.setAttribute('data-theme-mode', 'dark');
        localStorage.setItem('theme', 'dark');
    </script>
    
    <div class="flex grow">
        @await Component.InvokeAsync("AdminSidebar")
        <div class="wrapper flex grow flex-col">
            @await Component.InvokeAsync("AdminHeader")
            <main class="grow content pt-5" id="content" role="content">
                @RenderBody()
            </main>
            @await Component.InvokeAsync("AdminFooter")
        </div>
    </div>
    <script src="~/assets/js/core.bundle.js">
    </script>
    <script src="~/assets/vendors/apexcharts/apexcharts.min.js">
